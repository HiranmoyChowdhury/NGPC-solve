};
ll bigmod(long long num, long long power){
    if(power==0) return 1; long long x=bigmod(num, power/2); x*=x; x%=mod; if(power%2) x*=num;
    return x%mod;
}
void solve(){
    ll n, m;
    cin>>n>>m;

    ll keep=min(n, m);

    ll ans=keep*4;
    ans-=3;

    cout<<ans<<endl;








}
